{
	"name": "codekaizen/wp-github-gist-block",
	"description": "WordPress plugin for embedding GitHub Gists as blocks",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"post-install-cmd": [
			"@strauss-prefix-namespaces"
		],
		"post-update-cmd": [
			"@strauss-prefix-namespaces"
		],
		"post-autoload-dump": [
			"@strauss-include-autoloader"
		],
		"strauss-install": [
			"test -f strauss.phar || curl -o strauss.phar -L -C - https://github.com/BrianHenryIE/strauss/releases/latest/download/strauss.phar"
		],
		"strauss": [
			"@php strauss.phar"
		],
		"strauss-prefix-namespaces": [
			"@strauss-install",
			"@strauss",
			"@composer dump-autoload"
		],
		"strauss-include-autoloader": [
			"@strauss-install",
			"@strauss include-autoloader"
		],
		"test": "phpunit",
		"analyze": "php -d memory_limit=512M vendor/bin/phpstan",
		"sniff": "phpcs -ps src/ tests/",
		"fix": "phpcbf src/ tests/"
	},
	"require": {
		"scrivo/highlight.php": "^9.18",
		"monolog/monolog": "^3.9",
		"codekaizen/wp-package-autoupdater": "^1.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^9.6",
		"squizlabs/php_codesniffer": "^3.0",
		"wp-coding-standards/wpcs": "^3.0",
		"mockery/mockery": "^1.6",
		"phpstan/phpstan-mockery": "^2.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"10up/wp_mock": "^1.1"
	},
	"autoload": {
		"psr-4": {
			"CodeKaizen\\WPGithubGistBlock\\": "includes/"
		}
	},
	"extra": {
		"strauss": {
			"target_directory": "vendor",
			"namespace_prefix": "CodeKaizen\\WPGitHubGistBlock\\Dependencies\\",
			"classmap_prefix": "CodeKaizen_WPGitHubGistBlock_Dependencies_",
			"constant_prefix": "CKWPGHGBD_",
			"update_call_sites": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
